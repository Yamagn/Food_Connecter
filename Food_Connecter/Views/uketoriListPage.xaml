<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Food_Connecter.uketoriListPage"
             Title="チャットリスト">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="logo.jpg" Priority="-1" Order="Primary"/>
    </ContentPage.ToolbarItems>
    <StackLayout>
        <ListView x:Name="listView" ItemSelected="OnListItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding userName}" HorizontalOptions="Fill" Margin="30, 0, 0, 0" VerticalOptions="CenterAndExpand" FontSize="Medium" FontAttributes="Bold"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackLayout x:Name="Stack" IsVisible="false">
            <ActivityIndicator IsRunning="true" HorizontalOptions="Center"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
