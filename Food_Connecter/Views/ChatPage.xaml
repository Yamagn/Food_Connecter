<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Food_Connecter.ChatPage"
             Title="連絡用チャット">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="refresh.png" Clicked="refreshChat" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Label Text="受け取り日時や場所などの指定にご利用ください" HorizontalOptions="CenterAndExpand" VerticalOptions="Start"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="受け取りを完了する" Clicked="uketoriDone" HorizontalOptions="CenterAndExpand"/>
            <Button Text="申請をキャンセルする" Clicked="uketoriCancel" HorizontalOptions="CenterAndExpand" TextColor="Red"/>
        </StackLayout>
        <ScrollView VerticalOptions="Fill">
            <StackLayout x:Name="Stack"/>
        </ScrollView>
        <StackLayout Orientation="Horizontal" Margin="10, 0, 0, 10">
            <Entry x:Name="ChatContent" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="Send" Text="送信" WidthRequest="50" BackgroundColor="Teal" TextColor="White" Clicked="SendMessage"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
